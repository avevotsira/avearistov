---
import Footer from "@/components/Footer.astro";
import Navbar from "@/components/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Meet Ave Aristov, a netrunner navigating the cyberspace"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="keywords"
      content="Ave Aristov, netrunner, open-source, LibSQL Studio, KhmerCoders, digital odyssey, technology, coding, developer"
    />
    <meta name="author" content="Ave Aristov" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Ave Aristov, Navigating the Cyberspace</title>
    <link rel="canonical" href="https://www.avearis.com" />
    <meta
      property="og:title"
      content={"Ave Aristov, Navigating the Cyberspace"}
    />
    <meta
      property="og:description"
      content="Meet Ave Aristov, a netrunner navigating the cyberspace"
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.avearis.com" />
    <meta
      property="og:image"
      content="https://www.avearis.com/avearistov.png"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="Meet Ave Aristov, a netrunner navigating the cyberspace"
    />
    <meta
      name="twitter:image"
      content="https://www.avearis.com/avearistov.png"
    />
  </head>
  <Navbar />
  <body>
    <main>
      <slot />
    </main>
    <Footer />
  </body>


</html>
