---
import Footer from "@/components/Footer.astro";
import Navbar from "@/components/Navbar.astro";

interface Props {
  title: string;
}

const description =
  "Meet Ave Aristov, a netrunner exploring the vast expanse of cyberspace. Each line of code is a step into the unknown, a journey through the digital cosmos fueled by boundless curiosity and the thrill of discovery.";
const imageUrl = "https://www.avearis.com/avearistov.png";
const siteUrl = "https://www.avearis.com";
const author = "Ave Aristov";
const title = author;

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: author,
  url: siteUrl,
  image: imageUrl,
  sameAs: [
    "mailto:chantepkik@gmail.com",
    "https://www.facebook.com/Jakcrovat.Micasa/",
    "https://github.com/avevotsira",
    "https://discordapp.com/users/287134296811110402",
  ],
  jobTitle: "Netrunner",
  description: description,
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="keywords"
      content="Ave Aristov, netrunner, open-source, LibSQL Studio, KhmerCoders, digital odyssey, technology, coding, developer"
    />
    <meta name="author" content={author} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="canonical" href={siteUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:image" content={imageUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageUrl} />
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </head>

  <header class="sticky top-0 z-50">
    <Navbar />
  </header>
  <body>
    <main>
      <slot />
    </main>
    <Footer />
  </body>


</html>
