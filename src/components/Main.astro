---
import { cn } from "@/lib/utils";
import type { TransitionAnimationPair } from "astro";

const { class: additionalClasses } = Astro.props;


const fadeAnim: TransitionAnimationPair = {
  old: {
    name: "fadeOut",
    duration: "0.3s",
    easing: "ease-in-out",
    fillMode: "forwards",
  },
  new: {
    name: "fadeIn",
    duration: "0.3s",
    delay: "0.3s",
    easing: "ease-in-out",
    fillMode: "backwards",
  },
};

const viewTransition = {
  forwards: fadeAnim,
  backwards: fadeAnim,
};
---

<main
  id="main-content"
  class={cn(
    "container mx-auto px-4 py-4 sm:px-6 sm:py-6 md:px-8 md:py-8",
    additionalClasses
  )}
  transition:animate={viewTransition}
  transition:name="main"
>
  <slot />
</main>

<style>
  @keyframes fadeOut {
    from {
      opacity: 1;
      transform: translateY(0);
    }
    to {
      opacity: 0;
      transform: translateY(12px);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
